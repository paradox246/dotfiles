#! /bin/bash
wifi() {
  wifiperc="$(grep "^\s*w" /proc/net/wireless | awk '{ print "ï‡« ", int($3 * 100 / 70) "%" }')"
  echo -ne "${wifiperc}"
}
vol(){
    mix=`amixer get Master | tail -1`
    vol="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"
    if [[ $mix == *\[off\]* ]]; then
      echo -e "ï€¦ Muted"
    elif [[ $mix == *\[on\]* ]]; then
      echo -e "ï€¨ ${vol}%"
    else
      echo -e "VOL: ---"
    fi
}

dte(){
  dte="$(date +"%A, %B %d | ðŸ•’ %H:%M %Z")"
  echo -e "$dte"
}

mem(){
  mem=`free | awk '/Mem/ {printf "%d MiB/%d MiB\n", $3 / 1024.0, $2 / 1024.0 }'`
  echo -e "ðŸ–ª $mem"
}

cpu(){
  read cpu a b c previdle rest < /proc/stat
  prevtotal=$((a+b+c+previdle))
  sleep 0.5
  read cpu a b c idle rest < /proc/stat
  total=$((a+b+c+idle))
  cpu=$((100*( (total-prevtotal) - (idle-previdle) ) / (total-prevtotal) ))
  echo -e "ðŸ’» $cpu% cpu"
}
bat() {
  status="$(cat /sys/class/power_supply/ACAD/online)"
  battery="$(cat /sys/class/power_supply/BAT1/capacity)"
  timer="$(acpi -b | grep "Battery" | awk '{print $1}' | cut -c 1-1)"
  if [ "${status}" == 1 ]; then
    echo -ne "ï‰€  ${battery}% ïƒ§"
  else
    echo -ne "ï‰€  ${battery}%"
  fi
}

while true; do
	echo "$(wifi) | $(vol) | $(cpu) | $(mem) | $(bat)| $(dte)"
     sleep 10s    # Update time every ten seconds
done &

